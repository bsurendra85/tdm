{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "sourceMap": true,
    "strictNullChecks": false,
    "lib": [
      "es2015",
      "dom"
    ],
    "types": [
      "jasmine",
      "hammerjs",
      "node",
      "source-map",
      "webpack"
    ],
    "baseUrl": "./src",
    "paths": {
      "@tdm/ngx-dynamic-forms": [
        "@tdm/ngx-dynamic-forms/src/index.ts"
      ],
      "@tdm/ngx-dynamic-forms/*": [
        "@tdm/ngx-dynamic-forms/src/*"
      ],

      "@tdm/tixin": ["@tdm/tixin/src/index.ts"],
      "@tdm/tixin/*": ["@tdm/tixin/src/*"],

      "@tdm/core": ["@tdm/core/src/index.ts"],
      "@tdm/core/*": ["@tdm/core/src/*"],

      "@tdm/data": ["@tdm/data/src/index.ts"],
      "@tdm/data/*": ["@tdm/data/src/*"],

      "@tdm/ngx-http": ["@tdm/ngx-http/src/index.ts"],
      "@tdm/ngx-http/*": ["@tdm/ngx-http/src/*"],

      "@tdm/json-api-mapper": ["@tdm/json-api-mapper/src/index.ts"],
      "@tdm/json-api-mapper/*": ["@tdm/json-api-mapper/src/*"]

    }
  },
  "files": [
    "test.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  },
  "angularCompilerOptions": {
   "genDir": "./compiled",
   "skipMetadataEmit": true
  },
  "compileOnSave": false
}
