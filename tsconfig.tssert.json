{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "test-type/**/*.type-spec.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
